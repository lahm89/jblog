<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- MyBatis 설정 파일 -->
<configuration>
	<typeAliases>
		<typeAlias alias="UserVo" type="jblog.repository.UserVo"/>
		<typeAlias alias="BlogVo" type="jblog.repository.BlogVo"/>
		<typeAlias alias="CategoryVo" type="jblog.repository.CategoryVo"/>
		<typeAlias alias="PostVo" type="jblog.repository.PostVo"/>
		<typeAlias alias="CommentVo" type="jblog.repository.CommentVo"/>
	</typeAliases>
	<mappers>
		<mapper resource="/mybatis/mappers/user.xml"/>
		<mapper resource="/mybatis/mappers/blog.xml"/>
		<mapper resource="/mybatis/mappers/category.xml"/>
		<mapper resource="/mybatis/mappers/post.xml"/>
		<mapper resource="/mybatis/mappers/comment.xml"/>
	</mappers>
</configuration>
